@model TicketCreateVm
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Admin Panel</title>
    <link rel="stylesheet" href="~/css/admin_panel_page.css" />
</head>
<body>
    <div class="sidebar">
        <div class="brand">
            <div class="brand-icon"></div>
            <span>AdminPanel</span>
        </div>
        <div class="menu">
            <div class="menu-category">Main</div>
            <a asp-area="AdminPanel" asp-controller="Home" asp-action="Index" class="menu-item active">
                <div class="menu-icon">📊</div>
                <span>Dashboard</span>
            </a>
            <a asp-area="AdminPanel" asp-controller="Ticket" asp-action="Index" class="menu-item">
                <div class="menu-icon">👥</div>
                <span>Tickets</span>
            </a>
            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Index" class="menu-item">
                <div class="menu-icon">📦</div>
                <span>Categories</span>
            </a>
            <a asp-area="AdminPanel" asp-controller="Event" asp-action="Index" class="menu-item">
                <div class="menu-icon">📝</div>
                <span>Events</span>
            </a>


            <a asp-area="" asp-controller="Home" asp-action="Index" class="menu-item">
                <div class="menu-icon">🚪</div>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <div class="main-content">
        <div class="top-bar">
            <h1 class="page-title">Category Table</h1>
            <div class="user-profile">
                <div class="user-avatar">AM</div>
                <div class="user-info">
                    <div class="user-name">Admin</div>
                    <div class="user-role">Administrator</div>
                </div>
            </div>
        </div>


        <div class="form-container" style="padding: 20px;">
            <form asp-area="AdminPanel" asp-controller="Ticket" asp-action="Create" method="post" enctype="multipart/form-data">
                <div style="margin-bottom: 15px;">
                    <label asp-for="EventId"></label><br />
                    <select asp-for="EventId" asp-items="ViewBag.Events" style="width: 100%; padding: 8px;" required></select>
                </div>


                <div style="margin-bottom: 15px;">
                    <label asp-for="SeatCount">Bilet Növü:</label><br />
                    <select asp-for="SeatCount" style="width: 100%; padding: 8px;" required>
                        <option disabled selected>Seçin</option>
                        <option value="VIP">VIP</option>
                        <option value="Standart +">Standart +</option>
                        <option value="Standart">Standart</option>
                    </select>
                </div>

                <div style="margin-bottom: 15px;">
                    <label for="Price">Qiymət:</label><br />
                    <input type="number" asp-for="Price" min="0" required step="0.01" style="width: 100%; padding: 8px;" />
                </div>

                <div style="margin-bottom: 15px;">
                    <label for="TotalCount">Ümumi Say:</label><br />
                    <input type="number" asp-for="TotalCount" min="1" required style="width: 100%; padding: 8px;" />
                </div>

                <button type="submit" style="background-color: black; color: white; padding: 10px 20px; border: none; border-radius: 5px;">
                    Yarat
                </button>
            </form>
        </div>

    </div>
</body>
</html>
