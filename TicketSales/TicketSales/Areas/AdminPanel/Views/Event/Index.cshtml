@model IEnumerable<Event>
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Admin Panel</title>
    <link rel="stylesheet" href="~/css/admin_panel_page.css" />
</head>
<body>
    <div class="sidebar">
        <div class="brand">
            <div class="brand-icon"></div>
            <span>AdminPanel</span>
        </div>
        <div class="menu">
            <div class="menu-category">Main</div>
            <a asp-area="AdminPanel" asp-controller="Home" asp-action="Index" class="menu-item active">
                <div class="menu-icon">📊</div>
                <span>Dashboard</span>
            </a>
            <a asp-area="AdminPanel" asp-controller="Ticket" asp-action="Index" class="menu-item">
                <div class="menu-icon">👥</div>
                <span>Tickets</span>
            </a>
            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Index" class="menu-item">
                <div class="menu-icon">📦</div>
                <span>Categories</span>
            </a>
            <a asp-area="AdminPanel" asp-controller="Event" asp-action="Index" class="menu-item">
                <div class="menu-icon">📝</div>
                <span>Events</span>
            </a>


            <a asp-area="" asp-controller="Home" asp-action="Index" class="menu-item">
                <div class="menu-icon">🚪</div>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <div class="main-content">
        <div class="top-bar">
            <h1 class="page-title">Category Table</h1>
            <div class="user-profile">
                <div class="user-avatar">AM</div>
                <div class="user-info">
                    <div class="user-name">Admin</div>
                    <div class="user-role">Administrator</div>
                </div>
            </div>
        </div>



        <div class="grid-container">
            <div class="recent-activity">
                <button style="background-color:white;border:1px solid black; padding:10px; width:80px; border-radius:10px; margin-bottom:10px;">  <a style="text-decoration:none;" asp-area="AdminPanel" asp-controller="Event" asp-action="Create">+</a> </button>
                <div class="section-header">
                    <h2 class="section-title">Categories</h2>
                </div>
                <table class="activity-list">
                    <thead>
                        <tr>
                            <th>Number</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Category Name</th>
                            <th>Location</th>
                            <th>Settings</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @foreach (var evt in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="~/img/@evt.ImageLink" style="width:80px; height:50px;"/>
                                </td>
                                <td>@evt.Title</td>
                                <td>@evt.Description</td>
                                <td>@evt.Category.CategoryName</td>
                                <td>@evt.Location</td>
                                <td>
                                    <a asp-area="AdminPanel" asp-controller="Event" asp-action="Edit" asp-route-id="@evt.Id"
                                       style="background-color:white; border:1px solid green; padding:10px; width:80px; border-radius:10px; margin-bottom:10px; display:inline-block; text-align:center; color:green; text-decoration:none;">
                                        Edit
                                    </a>
                                    <a asp-area="AdminPanel" asp-controller="Event" asp-action="Delete" asp-route-id="@evt.Id"
                                       onclick="return confirm('Bu eventi silmək istədiyinizə əminsiniz?')"
                                       style="background-color:white; border:1px solid red; padding:10px; width:80px; border-radius:10px; margin-bottom:10px; display:inline-block; text-align:center; color:red; text-decoration:none;">
                                        Del
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        </div>


    </div>
</body>
</html>